@model CloudEngineMX.Erp.SetinTred.Web.Data.ViewModels.PurchaseOrderItemViewModel
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Purchases" asp-action="CreateItemToPurchase">
            <div class="row">
                <input type="hidden" asp-for="PurchaseOrderKey" />
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-bold" asp-for="Description">Descripci√≥n:</label>
                        <select asp-for="Description" asp-items="Model.Items" class="select"></select>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-bold" asp-for="Quantity">Cantidad:</label>
                        <input type="text" asp-for="Quantity" class="form-control" placeholder="Cantidad">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-bold" asp-for="Unit">Unidad:</label>
                        <input type="text" asp-for="Unit" class="form-control" placeholder="Unidad">
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                </div>*@
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-bold" asp-for="PartNumber">Numero de Parte:</label>
                        <input type="text" asp-for="PartNumber" class="form-control" placeholder="Numero de Parte">
                        <span asp-validation-for="PartNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-bold" asp-for="UnitPrice">Precio Unitario:</label>
                        <input type="text" asp-for="UnitPrice" class="form-control" placeholder="Precio Unitario">
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>

                <br />
                <div class="col-md-12 text-right">
                    <button type="submit" id="btnSubmit" class="btn bg-setin btn-labeled btn-labeled-right">Agregar Linea <b><i class="icon-add"></i></b></button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $(".select").select2({
            tags: true,
            tokenSeparators: [',']
        });

        $('.form-check-input-styled').uniform();

        $('#IsUrgent').change(function () {
            if ($(this).is(':checked')) {
                $('#IsAdministrator').val(true);
            }
            else {
                $('#IsAdministrator').val(false);
            }
        });
    });
</script>
