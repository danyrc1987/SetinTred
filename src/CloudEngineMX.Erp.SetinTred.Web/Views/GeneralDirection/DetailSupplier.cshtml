@model IEnumerable<CloudEngineMX.Erp.SetinTred.Core.Entities.ReportToPayDetail>
@{
    ViewData["Title"] = "DetailSupplier";
    Layout = "~/Views/Shared/_MasterSite.cshtml";
}

<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title font-weight-bold">Lista de instrucciones de Compra</h5>
        @*<div class="header-elements">
                <div class="btn-group">
                    <a class="btn bg-setin btn-icon addOrder" style="cursor: pointer"><i class="icon-googleplus5"></i>   &nbsp;Nueva Orden de Compra</a>
                </div>
            </div>*@
    </div>
    <div class="card-body"></div>
    <table class="table table-hover datatable-responsive">
        <thead>
        <tr>
            <th>Fecha Solicitud</th>
            <th>C贸digo Instrucci贸n</th>
            <th>Solicitante</th>
            <th>Area</th>
            <th>Importe</th>
            <th>Moneda</th>
            <th>Base Operativa</th>
            <th>Aplicaci贸n</th>
            <th>Clasificaci贸n</th>
            <th>Proveedor</th>
            <th>Tipo Proveedor</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
                <tr>
                    <td>@item.CreationDate.ToShortDateString()</td>
                    <td>@item.PurchaseOrderCode</td>
                    <td>@item.Applicant</td>
                    <td>@item.AreaName</td>
                    <td>@item.Total.ToString("C2")</td>
                    <td>@item.CurrencyName</td>
                    <td>@item.OperatingBaseName</td>
                    <td>@item.Application</td>
                    <td>@item.Classification</td>
                    <td>@item.FiscalName</td>
                    <td>
                        @if (item.IsCritical)
                        {
                            <label>Critico</label>
                        }
                        else
                        {
                    <label>No Critico</label>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section PageCrumb{
    <span class="breadcrumb-item">Direccion General</span>
    <span class="breadcrumb-item">Pagos</span>
