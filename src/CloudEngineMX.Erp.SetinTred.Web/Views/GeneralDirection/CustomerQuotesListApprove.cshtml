@model CloudEngineMX.Erp.SetinTred.Web.Data.ViewModels.CustomerQuotesViewModel
@{
    ViewData["Title"] = "Lista de Cotizaciones Aprobadas";
    Layout = "_MasterSite";
}
<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title font-weight-bold">Lista de Cotizaciones Validadas</h5>
        @*<div class="header-elements">
                <div class="btn-group">
                    <a title="Crear Cotizacion" asp-controller="Sales" asp-action="NewCustomerQuote" class="btn bg-setin btn-icon"><i class="icon-googleplus5"></i>   &nbsp;Nueva Cotizaci贸n</a>
                </div>
            </div>*@
    </div>
    <div class="card-body"></div>
    <table class="table table-hover datatable-responsive">
        <thead>
            <tr>
                <th>Codigo Cotizaci贸n</th>
                <th>Fecha de Creaci贸n</th>
                <th>Cliente</th>
                <th>Moneda</th>
                <th>Tipo de Cotizaci贸n</th>
                <th>Vendedor</th>
                <th>Total De Items</th>
                <th>Subtotal</th>
                <th>Estatus</th>
                <th class="text-center">Opciones</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Quotes)
            {
                <tr>
                    <td>@item.QuoteCode</td>
                    <td>@item.CreationDate</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CurrencyName</td>
                    <td>@item.QuoteType</td>
                    <td>@item.PaymentType</td>
                    <td>@item.TotalItems</td>
                    <td>@item.Subtotal.ToString("C2")</td>
                    <td>@item.Status</td>
                    <td class="text-center">
                        <div class="list-icons">
                            <div class="dropdown">
                                <a href="#" class="list-icons-item" data-toggle="dropdown">
                                    <i class="icon-menu9"></i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-right">
                                    <a asp-controller="GeneralDirection" asp-action="DetailCustomerQuote" asp-route-id="@item.QuoteKey" class="dropdown-item"><i class="icon-file-check"></i> Detalles</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
@section PageCrumb{
    <span class="breadcrumb-item">Direccion General</span>
    <span class="breadcrumb-item">Ingresos</span>
    <span class="breadcrumb-item active">Cotizaciones</span>
}
